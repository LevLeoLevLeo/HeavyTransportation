<Page x:Class="HeavyTransportation.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HeavyTransportation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="OrdersPage">

    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">

                <Button Name="Btn_AddOrder" Content="Добавить заказ" Width="150px" Click="Btn_AddOrder_Click"/>
                <Button Name="Btn_ChengeManager" Content="Изменить водителя" Margin="0 10 0 0"/>
                <Button Name="Btn_ListOrder" Content="Список заказов" Margin="0 10 0 0"/>

            </StackPanel>
            
        </StackPanel>
        
    </Grid>

</Page>
