<Page x:Class="HeavyTransportation.Pages.RouteDriversWithoutParthnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HeavyTransportation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="RouteDriversWithoutParthnerPage">

    <Grid>

        <DataGrid AutoGenerateColumns="False" Name="ListRouteWithoutParthner" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Margin="0 20 0 0">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Имя водителя" Width="*" Binding="{Binding Driver.FirstName}"/>
                <DataGridTextColumn Header="Фамилия водителя" Width="*" Binding="{Binding Driver.LastName}"/>
                <DataGridTextColumn Header="Номер заказа" Width="*" Binding="{Binding Id}"/>

            </DataGrid.Columns>
            
        </DataGrid>
        
    </Grid>

</Page>
