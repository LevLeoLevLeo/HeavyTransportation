<Page x:Class="HeavyTransportation.Pages.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HeavyTransportation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="FirstPage">

    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">

                <Button Name="Btn_Drivers" Content="Водители" FontSize="20pt" Width="150px" Click="Btn_Drivers_Click"/>
                <Button Name="Btn_Orders" Content="Заказы" FontSize="20pt" Width="150px" Margin="0 10 0 0" Click="Btn_Orders_Click"/>

            </StackPanel>

        </StackPanel>

        <Button Name="Btn_Close" Style="{StaticResource BtnClose}" Click="Btn_Close_Click"/>

    </Grid>

</Page>
